<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ControlesTipoVista.Views.ProgressBar_Vista"
             Title="ProgressBar_Vista">
    <VerticalStackLayout Spacing="20">
        <HorizontalStackLayout HorizontalOptions="CenterAndExpand" Margin="0,20">
            <Button Text="1 de 4"
                    Clicked="Button_Clicked25"/>
            <Button Text="2 de 4"
                    Clicked="Button_Clicked50"/>
            <Button Text="3 de 4"
                    Clicked="Button_Clicked75"/>
            <Button Text="4 de 4"
                    Clicked="Button_Clicked100"/>
        </HorizontalStackLayout>

        <ProgressBar x:Name="progressBar"
                     Progress="0.01"
                     ProgressColor="Orange"/>
    </VerticalStackLayout>
</ContentPage>